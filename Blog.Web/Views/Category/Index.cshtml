@model Blog.Application.ViewModels.Category.CategoryIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">@Model.Name</h1>

<hr />

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Category")
    </div>
    <div class="col-md-8">
        @foreach (var post in Model.Posts)
        {
        <div class="card mb-4">
            <h2 style="padding:10px;">
                <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id"
                   style="text-decoration:none;color:black;">
                    @post.Title
                </a>
            </h2>
            <div class="card-body">@post.ShortContent</div>
            <div style="display:flex; justify-content:space-between;padding:10px 30px;">
                <div>
                    Likes: @post.NumLikes
                </div>
                <div>
                    Comments: @post.NumComments
                </div>
                <div>
                    Created: @post.Created.ToString("yyyy-MM-dd")
                </div>
            </div>
        </div>
        }
    </div>
</div>


